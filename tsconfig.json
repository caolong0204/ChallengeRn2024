{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "@/*": ["src/*"],
      "@graphql/*": ["src/graphql/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"]
    },
    "resolveJsonModule": true
  }
}
